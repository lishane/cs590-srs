<idea-plugin>
    <id>edu.purdue.cs.android-deprecated-api-helper</id>
    <name>Android Depricated API Helper</name>
    <vendor email="aneusted@cs.purdue.edu" url="cs.purdue.edu">Purdue Computer Science CS 590 SRS</vendor>

    <description><![CDATA[
    This Plugin suggests replacement API calls for deprecated API calls that it may find
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <toolWindow id="MyPlugin"
                    anchor="bottom"
                    factoryClass="com.intellij.execution.dashboard.RunDashboardToolWindowFactory"/>
    </extensions>

